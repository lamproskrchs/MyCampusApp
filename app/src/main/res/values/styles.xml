<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.mycampusapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple</item>
    </style>


    <style name="TileCard">
        <item name="android:background">@drawable/rounded_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
    </style>


    <style name="CustomCalendarView" parent="android:Widget.Material.CalendarView">
        <item name="android:weekDayTextAppearance">@style/CalendarTextWhite</item>
        <item name="android:dateTextAppearance">@style/CalendarTextWhite</item>
    </style>

    <style name="CalendarTextWhite" parent="android:TextAppearance.Material">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>